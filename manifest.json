{
  "action": {
    "default_popup": "menu.html"
  },

  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://*.reddit.com/r/fantasyfootball/*",
        "https://*.reddit.com/r/nfl/*"
      ]
    }
  ],
  "description": "Highlights posts on /r/FantasyFootball",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 3,
  "name": "FF-Highlighter",
  "permissions": [
    "storage"
  ],
  "version": "1.0"
}